<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="10dp"
    app:cardElevation="5dp"
    android:layout_margin="5dp">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp">
        <TextView
            android:id="@+id/pending_mediclaim_hospital_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:textSize="18sp"
            android:text="Hospital Name"
            android:gravity="center_vertical" />

        <TextView
            android:id="@+id/pending_mediclaim_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:textSize="18sp"
            android:text="Date"
            android:gravity="center_vertical" />

        <TextView
            android:id="@+id/pending_mediclaim_Amount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:textSize="18sp"
            android:text="Amount"
            android:gravity="center_vertical" />

        <Button
            android:id="@+id/pending_mediclaim_remind_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Remind"
            android:textSize="25sp"
            android:textStyle="bold"
            android:textColor="@android:color/white"
            android:background="@drawable/card_view_round_button"/>
    </LinearLayout>
</android.support.v7.widget.CardView>