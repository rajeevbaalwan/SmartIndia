<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.admin.smartindia.Activities.AllergyActivity">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="5dp">

        <TextView
            android:id="@+id/allergic_reaction"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Allergic Reaction"
            android:padding="6dp"
            android:gravity="center_vertical"
            android:textSize="18sp"/>

    </android.support.v7.widget.CardView>
    <android.support.design.widget.FloatingActionButton
        android:id="@+id/emergency_floating_button"
        android:layout_width="60dp"
        android:layout_height="60dp"
        app:backgroundTint="@color/colorAccent"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_margin="10dp"
        app:fabSize="normal"
        android:scaleType="fitXY"
        android:src="@drawable/emergency_icon"/>
</RelativeLayout>
